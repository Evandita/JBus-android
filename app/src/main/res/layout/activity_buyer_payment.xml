<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buyerPayment_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg7"
    android:orientation="vertical"
    tools:context=".BuyerPaymentActivity">

    <TextView
        android:id="@+id/buyerPayment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="60dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:text="Payment History"
        android:textColor="@color/white"
        android:textSize="38dp"
        android:background="@drawable/rounded_background3"
        android:backgroundTint="@color/black"/>

    <ListView
        android:id="@+id/buyerPayment_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BuyerPaymentActivity"></ListView>



</LinearLayout>