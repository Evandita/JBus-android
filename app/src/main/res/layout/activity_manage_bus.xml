<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/managebus_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg9"
    android:orientation="vertical"
    tools:context=".ManageBusActivity">


    <ListView
        android:id="@+id/managebus_listView"
        android:layout_width="match_parent"
        android:layout_height="598dp"
        tools:context=".ManageBusActivity"></ListView>


    <LinearLayout
        android:id="@+id/managebus_pagination_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="21dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="21dp">
        <Button
            android:id="@+id/managebus_prev_page"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
            android:minHeight="0dp" />
        <HorizontalScrollView
            android:id="@+id/managebus_page_number_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:paddingHorizontal="18dp">
            <LinearLayout
                android:id="@+id/managebus_btn_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>
        </HorizontalScrollView>
        <Button
            android:id="@+id/managebus_next_page"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/baseline_arrow_forward_ios_24"
            android:minHeight="0dp" />
    </LinearLayout>
</LinearLayout>