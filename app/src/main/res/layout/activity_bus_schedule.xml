<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/gradient_bg9"
    tools:context=".BusScheduleActivity"
    android:id="@+id/bus_schedule_page">



    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="50dp"
        android:layout_width= "330dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        android:orientation="vertical">
        <TextView
            android:id="@+id/bus_schedule_bus_name"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:layout_marginVertical="15dp"
            android:fontFamily="@font/chau_philomene_one"
            android:gravity="center"
            android:text="BusNameSchedule"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:background="@drawable/textview_outline"/>

        <ListView
            android:id="@+id/bus_schedule_listView"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            tools:context=".BusScheduleActivity"></ListView>

        <Button
            android:id="@+id/bus_schedule_add_schedule"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="15dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/hammersmith_one"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:text="Add Schedule"
            android:textColor="#003399"
            android:textSize="22dp"
            app:cornerRadius="60dp" />
    </LinearLayout>




</LinearLayout>
