<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/renter_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg4"
    android:orientation="vertical"
    tools:context=".RegisterRenterActivity">


    <TextView
        android:id="@+id/renter_title"
        android:layout_width="212dp"
        android:layout_height="120dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/chau_philomene_one"
        android:text="Register your Company"
        android:textColor="#F7FEFF"
        android:textSize="34sp"
        tools:text="Register your Company" />


    <EditText
        android:id="@+id/renter_company"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:background="@android:drawable/divider_horizontal_bright"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="Company Name"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#F7FEFF" />

    <EditText
        android:id="@+id/renter_address"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/divider_horizontal_bright"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="Address"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#F7FEFF" />

    <EditText
        android:id="@+id/renter_phone_number"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/divider_horizontal_bright"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#F7FEFF" />

    <Button
        android:id="@+id/renter_register"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/cagliostro"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="REGISTER"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:cornerRadius="21dp" />







</LinearLayout>